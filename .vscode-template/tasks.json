{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "connect-server",
            "type": "shell",
            "command": "ssh root@这里写服务器ip"
        },
        {
            "label": "go-run-file",
            "type": "shell",
            "command": "go run '${file}'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "py-run-file",
            "type": "shell",
            "command": "python '${file}'"
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceRoot}"
        }
    ]
}